@model ML.Materia
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h3>Get All Materias</h3>
        </div>
    </div>

    <div class="row">
        <div class="col-6">
            <h1 class="text-start">Agregar una materia</h1>
        </div>
        <div class="col-6 text-end">
            <a href="@Url.Action("Form", "Materia")" class="btn btn-success"><i class="bi bi-plus-circle"></i></a>
        </div>
    </div>


    <hr />

    @using (Html.BeginForm("GetAll", "Materia", FormMethod.Post))
    {
        <div class="row">
            <div class="col-3">
                @Html.TextBoxFor(model => model.Nombre)
            </div>
            <div class="col-3">
                @Html.DropDownListFor(model => model.Semestre.IdSemestre,
               new SelectList(Model.Semestre.Semestres, "IdSemestre", "Descripcion"),
               "Selecciona un semestre", new { @class = "form-control" })
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <button class="btn btn-success" type="submit">Buscar</button>
            </div>
        </div>
    }



    <div class="row pt-4">
        <div class="col-12">

            <table class="table table-bordered">
                <thead>
                    <tr>
                        <td>Eliminar</td>
                        <td>Actualizar</td>
                        <td>IdMateria</td>
                        <td>Nombre</td>
                        <td>Descripcion</td>
                        <td>Creditos</td>
                        <td>Semestre</td>
                        <td>Inagen</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (ML.Materia materia in Model.Materias)
                    {
                        <tr>
                            <td>
                                <a href="@Url.Action("Delete","Materia", new { IdMateria = materia.IdMateria } )" class="btn btn-danger" onclick="return confirm('Realmente deseas eliminar la matera')">
                                    <i class="bi bi-trash-fill"></i>
                                </a>
                            </td>
                            <td>
                                <a href="@Url.Action("Form", "Materia", new { IdMateria = materia.IdMateria })" class="btn btn-warning">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                            </td>
                            <td>@materia.IdMateria</td>
                            <td>@materia.Nombre</td>
                            <td>@materia.Descripcion</td>
                            <td>@materia.Creditos</td>
                            <td>@materia.Semestre.Nombre</td>
                            @if (materia.Imagen != null)
                            {
                                <td>
                                    <img src="data:image/*;base64,@Convert.ToBase64String(@materia.Imagen)" />
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div>
        <input type="text" name="name" value="" id="input1" />
        <input type="text" name="inputName" value="" class="input1" />
        <input type="text" name="name" value="" id="input1" class="input1" />
    </div>
</div>

@*Layout*@
